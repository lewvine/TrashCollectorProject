@model IEnumerable<TrashCollector.Models.Customer>

@{
    ViewData["Title"] = "Tomorrow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customer Pickups for @DateTime.Today.AddDays(1).DayOfWeek (@DateTime.Today.AddDays(1).Date.ToString("d"))</h1>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegularPickUpDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialPickUpDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountBalance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegularPickUpDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpecialPickUpDay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    <a asp-controller="Customer" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Customer" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Customer" asp-action="Pickup" asp-route-id="@item.Id">Confirm Pickup</a> |

                </td>
            </tr>
        }
    </tbody>
</table>
